<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static" id="UserTwoFactorModal">
	<div class="modal-dialog modal-dialog-centered mw-650px">
		{% if not active %}
			<div class="modal-content">
				<div class="modal-header flex-stack">
					<div class="fs-1 fw-boldest">{{ i18n__('Configure Two Factor Authentication') }}</div>
					<div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
						<span class="svg-icon svg-icon-2x">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none">
								<path opacity="0.25" fill-rule="evenodd" clip-rule="evenodd" d="M2.36899 6.54184C2.65912 4.34504 4.34504 2.65912 6.54184 2.36899C8.05208 2.16953 9.94127 2 12 2C14.0587 2 15.9479 2.16953 17.4582 2.36899C19.655 2.65912 21.3409 4.34504 21.631 6.54184C21.8305 8.05208 22 9.94127 22 12C22 14.0587 21.8305 15.9479 21.631 17.4582C21.3409 19.655 19.655 21.3409 17.4582 21.631C15.9479 21.8305 14.0587 22 12 22C9.94127 22 8.05208 21.8305 6.54184 21.631C4.34504 21.3409 2.65912 19.655 2.36899 17.4582C2.16953 15.9479 2 14.0587 2 12C2 9.94127 2.16953 8.05208 2.36899 6.54184Z" fill="#12131A"/>
								<path fill-rule="evenodd" clip-rule="evenodd" d="M8.29289 8.29289C8.68342 7.90237 9.31658 7.90237 9.70711 8.29289L12 10.5858L14.2929 8.29289C14.6834 7.90237 15.3166 7.90237 15.7071 8.29289C16.0976 8.68342 16.0976 9.31658 15.7071 9.70711L13.4142 12L15.7071 14.2929C16.0976 14.6834 16.0976 15.3166 15.7071 15.7071C15.3166 16.0976 14.6834 16.0976 14.2929 15.7071L12 13.4142L9.70711 15.7071C9.31658 16.0976 8.68342 16.0976 8.29289 15.7071C7.90237 15.3166 7.90237 14.6834 8.29289 14.2929L10.5858 12L8.29289 9.70711C7.90237 9.31658 7.90237 8.68342 8.29289 8.29289Z" fill="#12131A"/>
							</svg>
						</span>
					</div>
				</div>
				<div class="modal-body scroll-y pt-10 pb-15 px-lg-17">
					<h3 class="text-dark fw-boldest fs-3 mb-7">{{ i18n__('Authenticator Apps') }}</h3>
					<div class="text-gray-500 fw-bold fs-5 mb-10">
						{{ i18n__('TWO_FACTOR_APP_SUGGESTIONS_HTML') | raw }}
						<div class="pt-5 text-center">
							<div class="h-150px background-loader">
								<img src="{{ qr_url }}" alt="" class="w-150px"/>
							</div>
						</div>
					</div>
					<div class="notice d-flex bg-light-warning rounded border-warning border border-dashed rounded mb-10 p-6">
						<span class="svg-icon svg-icon-2tx svg-icon-warning me-4">
							<svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
								<circle fill="#000000" opacity="0.3" cx="12" cy="12" r="10"/>
								<rect fill="#000000" x="11" y="7" width="2" height="8" rx="1"/>
								<rect fill="#000000" x="11" y="16" width="2" height="2" rx="1"/>
							</svg>
						</span>
						<div class="d-flex flex-stack flex-grow-1">
							<div class="fw-bold">
								<div class="fs-6 text-gray-600">{{ i18n__('If you having trouble using the QR code, select manual entry on your app, and enter your username and the code:') }}
									<div class="fw-boldest text-dark pt-2">{{ secret }}</div>
								</div>
							</div>
						</div>
					</div>
					{{ form_helper_open({class: 'form', 'data-ajax-form': null, 'data-dismiss-modal': null, 'data-gc-on-ajax': 'userTwoFactorEnabled'}) | raw }}
					<div class="mb-10 fv-row">
						{{ form_helper_input('user[TwoFactor][code]', 'text', '', {class: 'form-control form-control-lg form-control-solid', placeholder: i18n__('Enter authentication code'), required: null}) | raw }}
						{{ form_helper_input('user[TwoFactor][secret]', 'hidden', secret) | raw }}
					</div>
					<div class="d-flex flex-center">
						<button type="button" class="btn btn-white me-3" data-bs-dismiss="modal">{{ i18n__('Cancel') }}</button>
						<button type="submit" class="btn btn-primary">
							<span class="indicator-label">{{ i18n__('Submit') }}</span>
							<span class="indicator-progress">{{ i18n__('Please wait...') }}
								<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
							</span>
						</button>
					</div>
					{{ form_helper_close() | raw }}
				</div>
			</div>
		{% else %}
			<div class="modal-content">
				<div class="modal-header flex-stack">
					<div class="fs-1 fw-boldest">{{ i18n__('Disable Two Factor Authentication') }}</div>
					<div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
						<span class="svg-icon svg-icon-2x">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none">
								<path opacity="0.25" fill-rule="evenodd" clip-rule="evenodd" d="M2.36899 6.54184C2.65912 4.34504 4.34504 2.65912 6.54184 2.36899C8.05208 2.16953 9.94127 2 12 2C14.0587 2 15.9479 2.16953 17.4582 2.36899C19.655 2.65912 21.3409 4.34504 21.631 6.54184C21.8305 8.05208 22 9.94127 22 12C22 14.0587 21.8305 15.9479 21.631 17.4582C21.3409 19.655 19.655 21.3409 17.4582 21.631C15.9479 21.8305 14.0587 22 12 22C9.94127 22 8.05208 21.8305 6.54184 21.631C4.34504 21.3409 2.65912 19.655 2.36899 17.4582C2.16953 15.9479 2 14.0587 2 12C2 9.94127 2.16953 8.05208 2.36899 6.54184Z" fill="#12131A"/>
								<path fill-rule="evenodd" clip-rule="evenodd" d="M8.29289 8.29289C8.68342 7.90237 9.31658 7.90237 9.70711 8.29289L12 10.5858L14.2929 8.29289C14.6834 7.90237 15.3166 7.90237 15.7071 8.29289C16.0976 8.68342 16.0976 9.31658 15.7071 9.70711L13.4142 12L15.7071 14.2929C16.0976 14.6834 16.0976 15.3166 15.7071 15.7071C15.3166 16.0976 14.6834 16.0976 14.2929 15.7071L12 13.4142L9.70711 15.7071C9.31658 16.0976 8.68342 16.0976 8.29289 15.7071C7.90237 15.3166 7.90237 14.6834 8.29289 14.2929L10.5858 12L8.29289 9.70711C7.90237 9.31658 7.90237 8.68342 8.29289 8.29289Z" fill="#12131A"/>
							</svg>
						</span>
					</div>
				</div>
				<div class="modal-body scroll-y pt-10 pb-15 px-lg-17">
					<div class="notice d-flex bg-light-warning rounded border-warning border border-dashed rounded mb-10 p-6">
						<span class="svg-icon svg-icon-2tx svg-icon-warning me-4">
							<svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
								<circle fill="#000000" opacity="0.3" cx="12" cy="12" r="10"/>
								<rect fill="#000000" x="11" y="7" width="2" height="8" rx="1"/>
								<rect fill="#000000" x="11" y="16" width="2" height="2" rx="1"/>
							</svg>
						</span>
						<div class="d-flex flex-stack flex-grow-1">
							<div class="fw-bold">
								<div class="fs-6 text-gray-600">{{ i18n__('If you disable the two factor authentication your account will be exposed to phishing attacks.') }}</div>
							</div>
						</div>
					</div>
					{{ form_helper_open({class: 'form', 'data-ajax-form': null, 'data-dismiss-modal': null, 'data-gc-on-ajax': 'userTwoFactorDisabled'}) | raw }}
					{{ form_helper_input('user[TwoFactor][disable]', 'hidden', 1) | raw }}
					<div class="d-flex flex-center">
						<button type="button" class="btn btn-white me-3" data-bs-dismiss="modal">{{ i18n__('Cancel') }}</button>
						<button type="submit" class="btn btn-danger">
							<span class="indicator-label">{{ i18n__('Disable') }}</span>
							<span class="indicator-progress">{{ i18n__('Please wait...') }}
								<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
							</span>
						</button>
					</div>
					{{ form_helper_close() | raw }}
				</div>
			</div>
		{% endif %}
	</div>
</div>
