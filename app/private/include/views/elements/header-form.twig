			</div>
			<div class="col-md-6">
				{{ form_helper_input('participant[Participant][telephone]', 'number', false, {min: 600000000, max: 999999999, class: 'form-control form-control-dark bg-black-opacity text-white border border-white mt-1 text-uppercase', required: null, placeholder: 'Teléfono*'})|raw }}
			</div>
