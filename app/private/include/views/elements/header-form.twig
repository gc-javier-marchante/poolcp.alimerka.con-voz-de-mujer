				<div class="col-12 text-start text-md-end"> <div class="form-check text-shadow">
					<label class="form-check-label underlined-links text-white">
						{{ form_helper_input('participant[Participant][accepts_legal]', 'checkbox', 1, {div: false, label: false, required: null, checked: false, class: 'form-check-input'})|raw }}
						<span class="small checkbox-label-align">
							He leído y acepto los
							<a class="text-white" target="_self" href="{{ router_url({action: 'termsConditions'}) }}">
								<u>Términos y Condiciones</u>
							</a>.
						</span>
					</label>
				</div>
				<div class="form-check text-shadow">
					<label class="form-check-label underlined-links text-white">
						{{ form_helper_input('participant[Participant][accepts_info]', 'checkbox', 1, {div: false, label: false, checked: false, class: 'form-check-input'})|raw }}
